{
  "name": "agenda-paper",
  "version": "0.1.3",
  "description": "Show your daily agenda on an ePaper display",
  "license": "MIT",
  "repository": "eshaham/agenda-paper",
  "keywords": [
    "ePaper",
    "ePaper.js",
    "agenda",
    "calendar"
  ],
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@material-ui/system": "^4.12.1",
    "@mui/material": "^5.0.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.34",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "cookie-parser": "^1.4.5",
    "detect-rpi": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ws": "^5.0.2",
    "generate-password": "^1.6.1",
    "googleapis": "^89.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.4",
    "web-vitals": "^1.1.2",
    "ws": "^7.5.5"
  },
  "optionalDependencies": {
    "epaperjs": "^1.6.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-ws": "^3.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/react-router-dom": "^5.3.2",
    "@types/ws": "^8.2.0",
    "concurrently": "^6.3.0",
    "http-proxy-middleware": "^2.0.1",
    "ts-node-dev": "^1.1.8"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "BUILD_PATH='./build/client' react-scripts build",
    "build:server": "cd server && tsc",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepublish": "npm run build",
    "start": "concurrently npm:start:server npm:start:client",
    "start:server": "cd server && PORT=8080 NODE_ENV=development ts-node-dev --respawn --transpile-only index.ts",
    "start:client": "react-scripts start",
    "serve": "npm run build && node ./build/server/index.js"
  },
  "bin": {
    "agenda-paper": "./build/server/bin/index.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-assertions": [
        "warn",
        {
          "assertionStyle": "angle-bracket"
        }
      ],
      "@typescript-eslint/semi": [
        "error"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
